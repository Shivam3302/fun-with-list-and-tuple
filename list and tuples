def sort_by_last_element(tuples_list):
    
    def last_element_key(tuple_item):
        return tuple_item[-1]

    sorted_list = sorted(tuples_list, key=last_element_key)

    return sorted_list

# Sample List
sample_list = [(2, 5), (1, 2), (4, 4), (2, 3), (2, 1)]

sorted_list = sort_by_last_element(sample_list)

print(sorted_list)

output:
[(2, 1), (1, 2), (2, 3), (4, 4), (2, 5)]
